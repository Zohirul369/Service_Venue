<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Pastel_Mints"
    android:orientation="vertical"
    tools:context=".Home_Fragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:backgroundTint="@color/red"
        android:src="@drawable/login_icon"></com.google.android.material.floatingactionbutton.FloatingActionButton>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:iss_auto_cycle="true"
                    app:iss_delay="1000"
                    app:iss_period="1000"
                    app:iss_text_align="CENTER" />

                <!--                <EditText-->

                <!--                    android:id="@+id/search_bar_opt"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginStart="40dp"-->
                <!--                    android:layout_marginEnd="40dp"-->
                <!--                    android:background="@drawable/background_solid_white"-->
                <!--                    android:drawableStart="@drawable/baseline_search_24"-->
                <!--                    android:drawablePadding="10dp"-->
                <!--                    android:ems="10"-->
                <!--                    android:hint="Search"-->
                <!--                    android:inputType="text"-->
                <!--                    android:padding="10dp"-->
                <!--                    android:textColor="@color/black"-->
                <!--                    app:layout_constraintBottom_toBottomOf="@+id/smartSlider"-->
                <!--                    app:layout_constraintEnd_toEndOf="parent"-->
                <!--                    app:layout_constraintStart_toStartOf="parent"-->
                <!--                    app:layout_constraintTop_toBottomOf="@+id/smartSlider" />-->

            </RelativeLayout>


            <TextView
                android:id="@+id/service_catagory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Service Catagory"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/painting_img_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/Pastel_Mints"
                        android:src="@drawable/painting" />

                    <ImageButton
                        android:id="@+id/plumbing_img_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/Pastel_Mints"
                        android:src="@drawable/plumbing" />

                    <ImageButton
                        android:id="@+id/car_wash_img_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/Pastel_Mints"
                        android:src="@drawable/car_wash" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/car_rental_img_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/Pastel_Mints"
                        android:src="@drawable/car_rental" />

                    <ImageButton
                        android:id="@+id/electrician_img_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/Pastel_Mints"
                        android:src="@drawable/electrician" />

                    <ImageButton
                        android:id="@+id/laundry_img_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/Pastel_Mints"
                        android:src="@drawable/londi" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/beauty_parler_img_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/Pastel_Mints"
                        android:src="@drawable/parler" />

                    <ImageButton
                        android:id="@+id/house_clean_img_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/Pastel_Mints"
                        android:src="@drawable/house_clean" />

                    <ImageButton
                        android:id="@+id/moving_service_img_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/Pastel_Mints"
                        android:src="@drawable/moving_service" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>