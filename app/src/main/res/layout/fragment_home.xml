<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Pastel_Mints"
    tools:context=".Home_Fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/nav_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="Button" />

            <ImageButton
                android:id="@+id/slider"
                android:layout_width="270dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                tools:src="@tools:sample/backgrounds/scenic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Pastel_Mints"
                    android:padding="5dp"
                    android:src="@drawable/login" />

                <ImageButton
                    android:id="@+id/location_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Pastel_Mints"
                    android:padding="5dp"
                    android:src="@drawable/baseline_add_location_24" />
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/background_solid_white"
            android:ems="10"
            android:inputType="text"
            android:textColor="@color/black"
            android:drawableStart="@drawable/baseline_search_24"
            android:padding="10dp"
            android:hint="Search"
            android:drawablePadding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Job Posts"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Service Catagory"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/painting_img_btn"
                    android:background="@color/Pastel_Mints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/painting" />
                <ImageButton
                    android:id="@+id/plumbing_img_btn"
                    android:layout_width="wrap_content"
                    android:background="@color/Pastel_Mints"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/plumbing" />
                <ImageButton
                    android:id="@+id/car_wash_img_btn"
                    android:background="@color/Pastel_Mints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/car_wash" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/car_rental_img_btn"
                    android:background="@color/Pastel_Mints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/car_rental" />
                <ImageButton
                    android:id="@+id/electrician_img_btn"
                    android:layout_width="wrap_content"
                    android:background="@color/Pastel_Mints"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/electrician" />
                <ImageButton
                    android:id="@+id/londi_img_btn"
                    android:background="@color/Pastel_Mints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/londi" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/parler_img_btn"
                    android:background="@color/Pastel_Mints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/parler"/>
                <ImageButton
                    android:id="@+id/air_repair_img_btn"
                    android:layout_width="wrap_content"
                    android:background="@color/Pastel_Mints"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/air_repair" />
                <ImageButton
                    android:id="@+id/moving_service_img_btn"
                    android:background="@color/Pastel_Mints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/moving_service"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>